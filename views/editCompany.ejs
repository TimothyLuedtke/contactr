<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/__head') %>
  </head>

  <!-- Header / Navbar -->
  <header class="navbar-space"><%- include('partials/__header') %></header>

  <body class="">
    <div class="fb-box-shadow rounded-corners p-4 m-4 text-center text-md-start">
      <!-- Edit Company -->
      <div class="container">
        <div class="row">
          <div class="col col-12">
            <h2 class="text-center m-4">Edit Company</h2>
          </div>
        </div>
      </div>
        <hr />

        <form action="/companies/<%= company._id %>?_method=PUT" method="POST">
            <!--  Job Description -->
            <!-- <div class="form-group">
                <label for="jobDescription">Job Description</label>
                <input type="text" class="form-control" id="jobDescription" name="jobDescription" value="<%= company.jobDescription %>" required>
            </div> -->
            <!--  Company Name -->
            <div class="form-group">
                <label for="companyName">Company Name</label>
                <input type="text" class="form-control" id="companyName" name="companyName" value="<%= company.companyName %>" required>
            </div>
            <!--  Company Website -->
            <div class="form-group">
                <label for="companyUrl">Company Website</label>
                <input type="text" class="form-control" id="url" name="companyUrl" value="<%= company.url %>">
            </div>
            <!--  Role -->
            <div class="form-group">
                <label for="role">Role</label>
                <input type="text" class="form-control" id="role" name="role" value="<%= company.role %>" required>
            </div>
        
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <form action="/companies/<%= company._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>

         

    <!-- <script src="js/main.js"></script> -->
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
