<!-- list of companies in card format -->
<div class="row">
  <% companies.forEach((company, index) => { %>
  <div class="col-md-3 mb-4">
    <div class="card" id="card<%= index %>">
      <div class="card-header">
        <h5 class="h2 text-center"><%= company.companyName %></h5>
      </div>
      <div class="card-body">
        <div class="text-center m-2">
          <a class="card-title" href="<%= company.url %>" target="_blank"
            ><%= company.url %></a
          >
        </div>
        <!-- contact section -->
        <div class="text-center m-2">
          <p class="card-text">Contact</p>
        </div>
        <% if (company.contactId) { %>
        <div class="text-center m-2">
          <p class="card-text"><%= company.contactId.contactName %></p>
        </div>
        <div class="text-center m-2">
          <p class="card-text"><%= company.contactId.position %></p>
        </div>
        <div class="text-center m-2">
          <p class="card-text"><%= company.contactId.email %></p>
        </div>
        <% } %>
        <!-- company description -->
        <div class="text-center m-2">
          <p class="card-text">Company Description</p>
        </div>
        <div class="text-center m-2">
          <p class="card-text"><%= company.companyDescription %></p>
        </div>
        <!-- comments -->
        <div class="text-center m-2">
          <p class="card-text">Comments</p> 
        </div>
        <div class="text-center m-2">
          <p class="card-text"><%= company.comments %></p>
        </div>
      </div>
      <div class="card-footer">
        <div class="d-flex flex-row-reverse">
          <a href="/company/edit/<%= company._id %>" class="card-link">Edit</a>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>
