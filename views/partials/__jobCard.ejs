<!-- list of job listings in card format -->
<div class="row">
  <% jobListings.forEach(jobListing) => { %>
  <div class="col-md-4 mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= jobListing.jobTitle %></h5>
        <p class="card-text"><%= jobListing.jobDescription %></p>
        <a
          href="<%= jobListing.listingURL %>"
          class="btn btn-primary"
          target="_blank"
          >View Listing</a
        >
        <% if (jobListing.comments) { %>
        <p class="mt-3">
          <strong>Comments:</strong> <%= jobListing.comments %>
        </p>
        <% } %>
      </div>
    </div>
  </div>
  <% }) %>
</div>
