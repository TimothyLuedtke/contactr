<!-- list out the company names -->
<div class="d-flex flex-column">

  <!-- add a dropdown button for sort functionality based on recently added, alphabet a-z, alphabet z-a, tasks due -->
  <div class="container mt-5">

    <!-- List companies -->
    <div class="list-group mt-3">
      <% companies.forEach(company => { %>
      <a
        href="/companies/<%= company.id %>"
        class="list-group-item list-group-item-action"
        aria-current="true"
      >
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= company.companyName %></h5>
          <small><%= company.createdAt %></small>
        </div>
        <p class="mb-1"><%= company.description %></p>
        <small><%= company.address %></small>
      </a>
      <% }) %>
    </div>
  </div>
</div>
