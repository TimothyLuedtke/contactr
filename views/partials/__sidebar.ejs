<!-- list out the company names -->
<div class="d-flex flex-column " style="margin-top: 10px;">
    <h2>Companies</h2>
    <a class="btn btn-primary" href="/companies/add" role="button">Add Company</a>
    <!-- add a dropdown button for sort functionality based on recently added, alphabet a-z, alphabet z-a, tasks due -->
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="sortDropdownMenuButton"
            data-bs-toggle="dropdown" aria-expanded="false">
            Sort
        </button>
        <ul class="dropdown-menu" aria-labelledby="sortDropdownMenuButton">
            <li><a class="dropdown-item" href="/sort?order=recent">Recently Added</a></li>
            <li><a class="dropdown-item" href="/sort?order=asc">A-Z</a></li>
            <li><a class="dropdown-item" href="/sort?order=desc">Z-A</a></li>
            <li><a class="dropdown-item" href="/sort?order=due">Tasks Due</a></li>
        </ul>
    </div>
    <!-- list out the company names -->


    <% companies.forEach((company, index) => { %>
        <a class="btn btn-outline-primary" href="/companies/<%= company._id %>" role="button"><%= company.companyName %></a>
    <% }) %>

</div>
<hr>


